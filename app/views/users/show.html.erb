<h1>User info部分テンプレート</h1>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <% end %>
  <p>Title:</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>