<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/sidebar',book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            Following:<%= user.following.count %>
          </td>
          <td>
            Followers:<%= user.followers.count %>
          </td>
          <td>
            <%= link_to 'Follow', user_relationships_path(user), method: :post, class: 'btn btn-danger' unless @rel.present? %>
            <%= link_to 'Unfollow', relationship_path(@rel.id), method: :delete, class: 'btn btn-danger' if @rel.present? %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
       <% end %>
      </tbody>
   </table>
  </div>
 </div>
</div>