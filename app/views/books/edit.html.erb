<h1>Book#edit</h1>
<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>
  <div>Opinion</div>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>
  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path(@book) %>